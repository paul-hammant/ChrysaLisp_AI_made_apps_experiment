(def-method 'sys_pii :lisp_dirlist)
	;inputs
	;:r0 = lisp object (ptr)
	;:r1 = args list object (ptr)
	;outputs
	;:r0 = lisp object (ptr)
	;:r1 = return value object (ptr)
	;trashes
	;:r1-:r14

	(entry 'sys_pii :lisp_dirlist '(:r0 :r1))

	(errorif-lisp-args-sig 'error :r1 1)

	(vp-push :r0)
	(list-bind-args :r1 '(:r6) '(:str))
	(assign '(0 0 (* 4 1024)) '(:r7 :r8 :r9))
	(loop-start)
		(call 'sys_mem :realloc '(:r7 :r8 :r9) '(:r7 :r8))
		(call 'sys_pii :dirlist '(:r6 :r7 :r8) '(:r0))
		(breakif '(:r0 <= :r8))
		(vp-lea-d :r8 :r8 :r9)
	(loop-end)
	(call 'str :create_from_buffer '(:r7 :r0) '(:r9))
	(call 'sys_mem :free '(:r7))
	(vp-pop :r0)

	(exit 'sys_pii :lisp_dirlist '(:r0 :r9))
	(vp-ret)

(errorcase
(vp-label 'error)
	(jump 'lisp :repl_error '(:r0 "(pii-dirlist path)" +error_msg_wrong_types :r1))
	(signature '(str)))

(def-func-end)

(def-method 'sys_pii :lisp_fstat)
	;inputs
	;:r0 = lisp object (ptr)
	;:r1 = args list object (ptr)
	;outputs
	;:r0 = lisp object (ptr)
	;:r1 = return value object (ptr)
	;trashes
	;:r1-:r14

	(entry 'sys_pii :lisp_fstat '(:r0 :r1))

	(errorif-lisp-args-sig 'error :r1 1)

	(vp-push :r0)
	(assign '((:r1 array_begin) (@ sys/statics/statics)) '(:r0 :r1))
	(assign '((:r0 0) (:r1 statics_sys_load_stat_buffer)) '(:r0 :r1))
	(call 'sys_pii :stat '((& :r0 str_data) :r1) '(:r0))
	(vpif '(:r0 = 0))
		(vp-cpy-rr :r1 :r13)
		(call 'array :create :nil '(:r0))
		(call 'array :push_back2 '(:r0 (:r13 stat_mtime) (:r13 stat_fsize)) '(:r0 _ _ _ _))
		(call 'array :push_back '(:r0 (:r13 stat_mode)) '(:r1 _ _ _))
	(else)
		(assign '((:rsp 0)) '(:r1))
		(assign '((:r1 lisp_sym_nil)) '(:r1))
		(class/obj/ref :r1 :r2)
	(endif)
	(vp-pop :r0)

	(exit 'sys_pii :lisp_fstat '(:r0 :r1))
	(vp-ret)

(errorcase
(vp-label 'error)
	(jump 'lisp :repl_error '(:r0 "(pii-fstat path)" +error_msg_wrong_types :r1))
	(signature '(str)))

(def-func-end)

